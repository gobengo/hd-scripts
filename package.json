{
  "name": "hd-scripts",
  "version": "2.1.0",
  "description": "My personal config and scripts for web projects",
  "repository": "hugomrdias/hd-scripts",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "main": "src/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint **/*.js && prettier --check **/*.{js,ts,yml,json} --ignore-path .gitignore"
  },
  "files": [
    "src",
    "eslint",
    "prettier.config.js",
    "tsconfig.json"
  ],
  "keywords": [
    "cli-app",
    "cli",
    ""
  ],
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-etc": "^2.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md,yml,json}": "prettier --write",
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "./eslint/index.js",
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6"
  }
}
