{
    "name": "hd-scripts",
    "version": "0.0.1",
    "description": "My personal config and scripts for web projects",
    "repository": "hugomrdias/hd-scripts",
    "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
    "license": "MIT",
    "main": "src/index.js",
    "bin": "src/cli.js",
    "engines": {
        "node": ">=4"
    },
    "scripts": {
        "test": "nyc ava",
        "lint": "node src/cli lint -- *.js src/*.js",
        "validate": "run-p lint test",
        "precommit": "yarn validate",
        "version": "yarn changelog && git add changelog.md",
        "changelog":
            "conventional-changelog -p angular -i changelog.md -s -r 0",
        "cov":
            "yarn test && nyc report --reporter=html && hs coverage -s -o -c-1",
        "cov:report":
            "nyc report --reporter=text-lcov > coverage.lcov && codecov"
    },
    "files": ["index.js", "cli.js"],
    "keywords": ["cli-app", "cli", ""],
    "dependencies": {
        "concurrently": "3.5.0",
        "cross-spawn": "5.1.0",
        "eslint": "^4.7.1",
        "meow": "^3.7.0",
        "prettier": "1.7.4",
        "prettier-eslint-cli": "4.4.0",
        "prettier-stylelint": "0.4.2",
        "resolve-bin": "0.4.0",
        "stylelint": "^8.2.0",
        "stylelint-config-idiomatic-order": "^5.0.0"
    },
    "devDependencies": {
        "ava": "^0.20.0",
        "codecov": "^2.3.0",
        "conventional-changelog-cli": "^1.3.3",
        "http-serve": "^1.0.1",
        "husky": "^0.14.3",
        "np": "^2.16.0",
        "npm-run-all": "^4.1.1",
        "nyc": "^11.0.0"
    },
    "stylelint": {
        "extends": "./stylelint/index.js"
    },
    "eslintConfig": {
        "extends": "./eslint/plugins.js",
        "parserOptions": {
            "sourceType": "script"
        }
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        "dist",
        "storybook-static",
        "typings"
    ]
}
